{% extends 'base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <h1>Food</h1>
    <div class="card">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ food.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ food.name }}</td>
            </tr>
            <tr>
                <th>Fodmap</th>
                <td><i class="fas {{ food.isHighFodmap ? 'fa-times-circle textPurpleDark' : 'fa-check-circle textPinkMediumLight' }}"></i></td>
            </tr>
            <tr>
                <th>Oligos</th>
                <td>{{ food.oligos }}</td>
            </tr>
            <tr>
                <th>Fructose</th>
                <td>{{ food.fructose }}</td>
            </tr>
            <tr>
                <th>Polyols</th>
                <td>{{ food.polyols }}</td>
            </tr>
            <tr>
                <th>Lactose</th>
                <td>{{ food.lactose }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('food_index') }}">Retour Ã  la liste</a>

        <a href="{{ path('food_edit', {'id': food.id}) }}">Modifier</a>

        {{ include('food/_delete_form.html.twig') }}
    </div>

{% endblock %}
