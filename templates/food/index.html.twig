{% extends 'base.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}
    <h1>Food index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Fodmap</th>
                <th>Oligos</th>
                <th>Fructose</th>
                <th>Polyols</th>
                <th>Lactose</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td>{{ food.name }}</td>
                <td>{% if food.fodmap == 'low' %}<i class="fas fa-check-circle textPinkMediumLight"></i> {% else %}<i class="fas fa-times-circle textPurpleDark"></i> {% endif %}</td>
                <td>{{ food.oligos }}</td>
                <td>{{ food.fructose }}</td>
                <td>{{ food.polyols }}</td>
                <td>{{ food.lactose }}</td>
                <td>
                    <a href="{{ path('food_show', {'id': food.id}) }}">show</a>
                    <a href="{{ path('food_edit', {'id': food.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('food_new') }}">Create new</a>
{% endblock %}
