{% extends 'layout.html.twig' %}


{% block main %}
    <header>
        {% include '_nav.html.twig' %}
    </header>
    <div class="row justify-content-center mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="container">
        {% block body %}{% endblock %}
    </div>

{% endblock %}
